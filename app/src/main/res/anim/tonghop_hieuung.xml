<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="3000"
    android:repeatMode="reverse"
    >
    <scale
        android:fromXScale="1"
        android:toXScale="2"
        android:fromYScale="1"
        android:toYScale="2"
        android:pivotX="50%"
        android:pivotY="50%">
    </scale>
    <rotate
        android:pivotX="50%"
        android:pivotY="50%"
        android:toDegrees="0"
        android:fromDegrees="360">

    </rotate>

</set>